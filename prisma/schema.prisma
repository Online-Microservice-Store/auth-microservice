generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  email String @unique
  name String
  password String
}
// Modelos de la verdadera BD

model Person{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lastname String
  identification String
}

model Profile{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
  email String
  ocupation String
}

